# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/my_app_db

# JWT Configuration
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
PASSWORD_RESET_TOKEN_SECRET=change-me
PASSWORD_RESET_EXPIRES_IN=1h
PASSWORD_RESET_EXPIRES_IN_MS=3600000

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# URLs
API_URL=http://localhost:3000/api/v1
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
FORGOT_PASSWORD_RATE_LIMIT_WINDOW_MS=3600000
FORGOT_PASSWORD_RATE_LIMIT_MAX_REQUESTS=3

# Body size limit
BODY_LIMIT=1mb

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# OAuth (optional)
GOOGLE_CLIENT_ID=change-me
GOOGLE_CLIENT_SECRET=change-me
GITHUB_CLIENT_ID=change-me
GITHUB_CLIENT_SECRET=change-me
FACEBOOK_CLIENT_ID=change-me
FACEBOOK_CLIENT_SECRET=change-me
