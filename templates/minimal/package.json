{
  "name": "mm-backend-core",
  "version": "1.0.2",
  "description": "Express + MongoDB REST API template with JWT auth, refresh tokens, RBAC, OAuth, and uploads.",
  "type": "module",
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/matanmalka1/mm-backend-core.git"
  },
  "bugs": {
    "url": "https://github.com/matanmalka1/mm-backend-core/issues"
  },
  "homepage": "https://github.com/matanmalka1/mm-backend-core#readme",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "seed": "node src/seed.js",
    "jscpd": "jscpd . --ignore \"**/node_modules/**\"",
    "dev:env": "cross-env NODE_ENV=development nodemon src/server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "rest-api",
    "jwt",
    "authentication",
    "rbac",
    "oauth",
    "template",
    "refresh-token"
  ],
  "author": "Matan Malka",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "jscpd": "^4.0.5",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
